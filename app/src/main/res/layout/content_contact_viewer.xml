<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_contact_viewer"
        tools:context=".ContactViewer">



    <TextView
            android:text="Contact Viewer"
            android:layout_width="121dp"
            android:layout_height="35dp"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.453"/>
    <Button
            android:text="Edit This Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editorButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.457"
            app:layout_constraintVertical_bias="0.946"/>
    <TextView
            android:text="contactName"
            android:layout_width="142dp"
            android:layout_height="42dp"
            android:id="@+id/contactName" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/editorButton"
            app:layout_constraintHorizontal_bias="0.243" app:layout_constraintVertical_bias="0.375"/>
    <TextView
            android:text="contactEmail"
            android:layout_width="134dp"
            android:layout_height="30dp"
            android:id="@+id/contactEmail" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.234" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/contactName" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editorButton" app:layout_constraintVertical_bias="0.151"/>
    <TextView
            android:text="contactNumber"
            android:layout_width="132dp"
            android:layout_height="36dp"
            android:id="@+id/contactNumber" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/contactEmail" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editorButton" app:layout_constraintHorizontal_bias="0.233"
            app:layout_constraintVertical_bias="0.4"/>
    <Button
            android:text=" back"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:id="@+id/backButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/textView2"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.653" app:layout_constraintVertical_bias="0.017"/>


</android.support.constraint.ConstraintLayout>